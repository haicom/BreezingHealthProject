<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <TextView
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:textColor="@color/gray"
        android:textSize="@dimen/small_textsize" />

    <RelativeLayout android:id="@+id/seekbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notice"
        android:layout_marginTop="@dimen/activity_vertical_margin" >

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/hopeWeight" />

        <TextView
            android:id="@+id/hopeWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="@dimen/middle_textsize" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/different_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_small_margin"
        android:gravity="center_vertical"
        android:textColor="@color/gray"
        android:textSize="@dimen/small_textsize"
        android:layout_below="@+id/seekbar_layout"
        android:layout_marginRight="100dp"
        android:layout_alignParentRight="true" />

    <RelativeLayout android:id="@+id/weight_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/information_cell_height"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/different_value" >

        <EditText
            android:id="@+id/weight"
            style="@style/EditTextStyle"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_spinner_selector"
            android:hint="@string/click_to_select_weight"
            android:singleLine="true" />

        <TextView
            android:id="@+id/weight_unit"
            style="@style/TitleTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_spinner_selector"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:singleLine="true"
            android:text="@string/textview_title_unit" />
    </RelativeLayout>
    
    <Button
        android:id="@+id/record"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_layout"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/btn_red_round_selector"
        android:singleLine="true"
        android:text="@string/record_current_weight"
        android:textColor="@color/white" />
    
    <Button
        android:id="@+id/connect"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/record"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/btn_red_round_selector"
        android:singleLine="true"
        android:text="@string/connect_to_weight_scale"
        android:textColor="@color/white" />

</RelativeLayout>