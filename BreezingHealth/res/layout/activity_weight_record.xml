<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <TextView
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:textColor="@color/gray"
        android:textSize="@dimen/small_textsize" />

    <RelativeLayout
        android:id="@+id/seekbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notice"
        android:layout_marginTop="@dimen/activity_vertical_margin" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/hopeWeight"
            android:contentDescription="@string/content_description"
            android:scaleType="centerInside"
            android:src="@drawable/bg_seekbar" />

        <SeekBar
            android:id="@+id/seekbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/hopeWeight"
            android:maxHeight="4dp"
            android:minHeight="4dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:progress="100"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/seekbar_thumb" />

        <TextView
            android:id="@+id/hopeWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="@dimen/middle_textsize"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/different_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/seekbar_layout"
        android:background="@drawable/bg_up_forward_box"
        android:gravity="center_vertical"
        android:textColor="@color/gray"
        android:textSize="@dimen/small_textsize" />

    <TextView
        android:id="@+id/weight_title"
        style="@style/TitleTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/different_value"
        android:layout_marginTop="30dp"
        android:singleLine="true"
        android:text="@string/current_weight_title"
        android:textColor="@color/black"
        android:textSize="@dimen/small_textsize" />

    <RelativeLayout
        android:id="@+id/weight_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/information_cell_height"
        android:layout_below="@+id/weight_title" >

        <EditText
            android:id="@+id/weight"
            style="@style/EditTextStyle"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_spinner_selector"
            android:hint="@string/click_to_select_weight"
            android:singleLine="true" />

        <TextView
            android:id="@+id/weight_unit"
            style="@style/TitleTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_spinner_selector"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:singleLine="true"
            android:text="@string/textview_title_unit" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/expected_weight_title"
        style="@style/TitleTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_layout"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:singleLine="true"
        android:text="@string/expected_weight_title"
        android:textColor="@color/black"
        android:textSize="@dimen/small_textsize"
         />

    <RelativeLayout
        android:id="@+id/expected_weight_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/information_cell_height"
        android:layout_below="@+id/expected_weight_title"
         >

        <EditText
            android:id="@+id/expected_weight"
            style="@style/EditTextStyle"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_spinner_selector"
            android:hint="@string/click_to_select_expected_weight"
            android:singleLine="true" />

        <TextView
            android:id="@+id/expected_weight_unit"
            style="@style/TitleTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_spinner_selector"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:singleLine="true"
            android:text="@string/textview_title_unit" />
    </RelativeLayout>

    <Button
        android:id="@+id/record"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expected_weight_layout"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/btn_red_round_selector"
        android:singleLine="true"
        android:text="@string/record_current_weight"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/connect"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/record"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/btn_white_round_big_selector"
        android:singleLine="true"
        android:text="@string/connect_to_weight_scale"
        android:textColor="@color/black" />

</RelativeLayout>