<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:id="@+id/pie_graph_layout" >
        
        <com.breezing.health.widget.PieGraph
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pie_graph"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/uptake_caloric"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/TitleTextViewStyle"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"/>
             <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/kilo_metabolism"
                style="@style/TitleTextViewStyle"
                android:layout_weight="1"
                android:layout_gravity="center"/>
        </LinearLayout>
        
    </FrameLayout>

    <GridView android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/pie_graph_layout"
        android:numColumns="4" />

</RelativeLayout>