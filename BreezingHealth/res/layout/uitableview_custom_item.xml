<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:duplicateParentState="true" 
    android:paddingLeft="@dimen/activity_horizontal_small_margin"
    android:paddingRight="@dimen/activity_horizontal_small_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="40dp">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/title"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textColor="@color/uitableview_title_selector"
        android:textSize="@dimen/normal_textsize"
        android:duplicateParentState="true" />
        
    <TextView
         android:id="@+id/content"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:textColor="@color/uitableview_content_selector"
         android:textSize="@dimen/normal_textsize"
         android:duplicateParentState="true" />
        
</RelativeLayout>
