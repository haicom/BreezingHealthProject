<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:paddingBottom="6.0dp"
        android:paddingTop="6.0dp"
        android:tag="back" >

        <Button
            android:id="@+id/recent_del_btn"
            android:layout_width="64.0dp"
            android:layout_height="34.0dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="10.0dp"
            android:background="@drawable/red_del_btn_bg"
            android:shadowColor="@color/gray"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.5"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="@dimen/small_textsize" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:tag="front"
        android:background="@drawable/food_intake_list_item_bg" >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/total"
            android:textColor="@color/black"
            android:textIsSelectable="false"
            android:textSize="@dimen/normal_textsize" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="@dimen/searchbar_vertical_small_margin"
            android:layout_toLeftOf="@+id/total"
            android:textColor="@color/gray"
            android:textIsSelectable="false"
            android:textSize="@dimen/middle_textsize" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/gray"
            android:textIsSelectable="false"
            android:textSize="@dimen/middle_textsize" />
    </RelativeLayout>

</FrameLayout>