<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/baseResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:textColor="@color/gray"
        android:text="@string/base_exercise_caloric_burn"
        android:textSize="@dimen/normal_textsize" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baseResult"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        layout="@layout/vane_layout"
        android:id="@+id/base_vane" />
    
    <TextView
        android:id="@+id/digestResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/base_vane"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:textColor="@color/gray"
        android:text="@string/digest_exercise_caloric_burn"
        android:textSize="@dimen/normal_textsize" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/digestResult"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        layout="@layout/vane_layout"
        android:id="@+id/digest_vane" />
    
    <TextView
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/breezing_result_more"
        android:textColor="@color/gray"
        android:textSize="@dimen/middle_textsize" />
    

</RelativeLayout>
